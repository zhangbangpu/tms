<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chinaway.tms.basic.dao.SysDictionaryMapper" >
  	<resultMap id="BaseResultMap" type="com.chinaway.tms.basic.model.SysDictionary" >
		<id column="id" property="id"/>
		<result column="pid" property="pid"/>
		<result column="name" property="name"/>
		<result column="value" property="value"/>
		<result column="descs" property="descs"/>
	</resultMap>
       
	<sql id="Base_Column_List" >
		 id,pid,name,value,descs
	</sql>
   
	<!-- 动态查询条件 -->
	<sql id="Example_Where_Clause">
	where 1=1
	<trim suffixOverrides="," >
		<if test="id != null and id != '' ">
		    and id = #{id}
		</if>
		<if test="pid != null and pid != '' ">
		    and pid = #{pid}
		</if>
		<if test="name != null and name != '' ">
		    and name = #{name}
		</if>
		<if test="value != null and value != '' ">
		    and value = #{value}
		</if>
		<if test="descs != null and descs != '' ">
		    and descs = #{descs}
		</if>
	
	</trim>
	</sql>
 
	<!-- 根据id查询  -->
	<select id="selectById"  resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select <include refid="Base_Column_List" /> 
	 from sys_dictionary where id = #{id}
	</select>

	<!-- 条件查询所有(分页拦截的也是这个语句) -->
	<select id="selectAll4Page" resultMap="BaseResultMap" parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from sys_dictionary
		<include refid="Example_Where_Clause"/>
	</select>
   
	<!-- 插入记录 -->
	<insert id="insert" parameterType="com.chinaway.tms.basic.model.SysDictionary" >
	  insert into sys_dictionary(id,pid,name,value,descs)
 values(#{id},#{pid},#{name},#{value},#{descs})
	</insert>

	<!-- 根据id，修改记录-->  
	 <update id="update" parameterType="com.chinaway.tms.basic.model.SysDictionary" >
	  update sys_dictionary set pid=#{pid},name=#{name},value=#{value},descs=#{descs} where id=#{id}
	 </update>
 
	 <!-- 动态修改记录，只修改只不为空的字段 -->
	<update id="updateSelective" parameterType="com.chinaway.tms.basic.model.SysDictionary" >
		update sys_dictionary set 
	<trim  suffixOverrides="," >
	<if test="pid != null  ">
		pid=#{pid},
	</if>
	<if test="name != null  and name != '' ">
		name=#{name},
	</if>
	<if test="value != null  and value != '' ">
		value=#{value},
	</if>
	<if test="descs != null  and descs != '' ">
		descs=#{descs},
	</if>
	</trim> where id=#{id}
	</update>

	<!-- 删除记录 -->
	<delete id="deleteById" parameterType="com.chinaway.tms.basic.model.SysDictionary" >
		delete 	 from sys_dictionary where id = #{id}
	</delete>
  	
</mapper>
